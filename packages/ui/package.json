{
  "name": "@aksar/ui",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*.tsx"
  },
  "scripts": {
    "add": "bunx shadcn-ui add",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "ui-add": "bunx shadcn-ui add && prettier src --write --list-different"
  },
  "devDependencies": {
    "@aksar/eslint-config": "*",
    "@aksar/prettier-config": "*",
    "@aksar/tailwind-config": "*",
    "@aksar/tsconfig": "*",
    "@types/react": "^18.3.2",
    "eslint": "^9.2.0",
    "prettier": "^3.2.5",
    "react": "18.3.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "react": "18.3.1",
    "zod": "^3.23.8"
  },
  "prettier": "@aksar/prettier-config"
}